{% extends 'base.html.twig' %}

{% block body %}
  <div class="flex flex-col items-center justify-center bg-[#FEFDFB] py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md">
      <div class="text-center mb-10">
        <h2 class="text-4xl font-playfair text-gray-900">Créer un compte</h2>
        <p class="mt-2 text-gray-600">Rejoignez-nous pour profiter de nos délicieuses pâtisseries</p>
      </div>
      
      {% if errors is defined and errors is not empty %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
          <span class="block sm:inline">{{ errors }}</span>
        </div>
      {% endif %}
      
      <div class="bg-white shadow-lg rounded-lg p-8 border border-gray-100">
        <div class="flex items-center justify-between mb-8">
          <div class="flex flex-col items-center">
            <div
              id="step1-indicator"
              class="w-10 h-10 flex items-center justify-center rounded-full bg-[#EDA239] text-white font-medium">
              1
            </div>

            <span class="text-xs mt-1">Profil</span>
          </div>

          <div class="flex-1 h-1 mx-2 bg-gray-200">
            <div id="progress-bar" class="h-1 bg-[#EDA239] w-0 transition-all duration-300"></div>
          </div>

          <div class="flex flex-col items-center">
            <div
              id="step2-indicator"
              class="w-10 h-10 flex items-center justify-center rounded-full bg-gray-200 text-gray-500 font-medium">
              2
            </div>
            
            <span class="text-xs mt-1">Adresse</span>
          </div>
        </div>
        
        <form id="register-form" class="space-y-6" method="post">
          <div id="step1" class="space-y-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
              <div>
                <label for="firstName" class="block text-sm font-medium text-gray-700">Prénom</label>
                <div class="mt-1">
                  {{ component('Input', {
                    id: 'firstName',
                    name: 'firstName',
                    type: 'text',
                    placeholder: 'Votre prénom',
                    autocomplete: 'given-name',
                    required: true
                  }) }}
                </div>
              </div>
              
              <div>
                <label for="lastName" class="block text-sm font-medium text-gray-700">Nom</label>
                <div class="mt-1">
                  {{ component('Input', {
                    id: 'lastName',
                    name: 'lastName',
                    type: 'text',
                    placeholder: 'Votre nom',
                    autocomplete: 'family-name',
                    required: true
                  }) }}
                </div>
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
              <div class="mt-1">
                {{ component('Input', {
                  id: 'email',
                  name: 'email',
                  type: 'email',
                  placeholder: 'Votre email',
                  autocomplete: 'email',
                  required: true
                }) }}
              </div>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
              <div>
                <label for="password" class="block text-sm font-medium text-gray-700">Mot de passe</label>
                <div class="mt-1">
                  {{ component('Input', {
                    id: 'password',
                    name: 'password',
                    type: 'password',
                    placeholder: 'Mot de passe',
                    autocomplete: 'new-password',
                    required: true
                  }) }}
                </div>
              </div>
              
              <div>
                <label for="confirmPassword" class="block text-sm font-medium text-gray-700">
                  Confirmation
                </label>
                <div class="mt-1">
                  {{ component('Input', {
                    id: 'confirmPassword',
                    name: 'confirmPassword',
                    type: 'password',
                    placeholder: 'Confirmer celui-ci',
                    autocomplete: 'new-password',
                    required: true
                  }) }}
                </div>
              </div>
            </div>

            <div>
              <button type="button" id="next-btn" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-black bg-[#EDA239] hover:bg-[#EFAF7D] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#EDA239]">
                Continuer
              </button>
            </div>
          </div>
          
          <div id="step2" class="space-y-6 hidden">
            <div>
              <label for="address" class="block text-sm font-medium text-gray-700">Adresse</label>
              <div class="mt-1">
                {{ component('Input', {
                  id: 'address',
                  name: 'address',
                  type: 'text',
                  placeholder: 'Numéro et nom de rue',
                  autocomplete: 'street-address'
                }) }}
              </div>
            </div>
            
            <div>
              <label for="postalCode" class="block text-sm font-medium text-gray-700">Code postal</label>
              <div class="mt-1">
                {{ component('Input', {
                  id: 'postalCode',
                  name: 'postalCode',
                  type: 'text',
                  placeholder: 'Code postal',
                  autocomplete: 'postal-code'
                }) }}
              </div>
            </div>
            
            <div>
              <label for="city" class="block text-sm font-medium text-gray-700">Ville</label>
              <div class="mt-1">
                {{ component('Input', {
                  id: 'city',
                  name: 'city',
                  type: 'text',
                  placeholder: 'Ville',
                  autocomplete: 'address-level2'
                }) }}
              </div>
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700">Téléphone</label>
              <div class="mt-1">
                {{ component('Input', {
                  id: 'phone',
                  name: 'phone',
                  type: 'tel',
                  placeholder: 'Numéro de téléphone',
                  autocomplete: 'tel'
                }) }}
              </div>
            </div>
            
            <div class="flex flex-col space-y-3">
              {{ component('Button', {
                label: 'Créer mon compte',
                variant: 'primary',
                type: 'submit',
                fullWidth: true
              }) }}
              
              <button type="button" id="skip-btn" class="w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#EDA239]">
                Je renseignerai mon adresse plus tard
              </button>
              
              <button type="button" id="back-btn" class="text-sm text-center text-gray-500 hover:text-gray-700">
                Retour à l'étape précédente
              </button>
            </div>
          </div>
          
          <div class="flex items-center mt-4">
            <input id="agreeTerms" name="agreeTerms" type="checkbox" class="h-4 w-4 text-[#EDA239] focus:ring-[#EDA239] border-gray-300 rounded" required>
            <label for="agreeTerms" class="ml-2 block text-sm text-gray-700">
              J'accepte les <a href="#" class="text-[#EDA239] hover:text-[#EFAF7D]">conditions d'utilisation</a> et la <a href="#" class="text-[#EDA239] hover:text-[#EFAF7D]">politique de confidentialité</a>
            </label>
          </div>
        </form>
        
        <div class="mt-6 text-center">
          <p class="text-sm text-gray-600">
            Déjà inscrit ?
            <a href="{{ path('app_login_page') }}" class="font-medium text-[#EDA239] hover:text-[#EFAF7D]">
              Se connecter
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const step1 = document.getElementById('step1');
      const step2 = document.getElementById('step2');
      const nextBtn = document.getElementById('next-btn');
      const backBtn = document.getElementById('back-btn');
      const skipBtn = document.getElementById('skip-btn');
      const step1Indicator = document.getElementById('step1-indicator');
      const step2Indicator = document.getElementById('step2-indicator');
      const progressBar = document.getElementById('progress-bar');
      const form = document.getElementById('register-form');
      
      function validateStep1() {
        const firstName = document.getElementById('firstName').value;
        const lastName = document.getElementById('lastName').value;
        const email = document.getElementById('email').value;
        const password = document.getElementById('password').value;
        const confirmPassword = document.getElementById('confirmPassword').value;

        if (!firstName || !lastName || !email || !password || !confirmPassword) return false;

        if (password.length < 8) return false;

        if (!/[A-Z]/.test(password)) return false;
        if (!/[a-z]/.test(password)) return false;
        if (!/[0-9]/.test(password)) return false;
        if (!/[!@#$%^&*]/.test(password)) return false;

        if (password !== confirmPassword) return false;

        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(email)) return false;

        return true;
      }
      
      nextBtn.addEventListener('click', function() {
        if (validateStep1()) {
          step1.classList.add('hidden');
          step2.classList.remove('hidden');
          step1Indicator.classList.remove('bg-[#EDA239]', 'text-white');
          step1Indicator.classList.add('bg-[#EDA239]', 'text-white');
          step2Indicator.classList.remove('bg-gray-200', 'text-gray-500');
          step2Indicator.classList.add('bg-[#EDA239]', 'text-white');
          progressBar.style.width = '100%';
        }
      });
      
      backBtn.addEventListener('click', function() {
        step2.classList.add('hidden');
        step1.classList.remove('hidden');
        step2Indicator.classList.remove('bg-[#EDA239]', 'text-white');
        step2Indicator.classList.add('bg-gray-200', 'text-gray-500');
        progressBar.style.width = '0%';
      });
      
      skipBtn.addEventListener('click', function() {
        const addressFields = ['address', 'postalCode', 'city', 'phone'];
        addressFields.forEach(field => {
          const input = document.getElementById(field);
          input.value = '';
          input.required = false;
        });

        if (!document.getElementById('agreeTerms').checked) {
          alert('Vous devez accepter les conditions d\'utilisation pour continuer.');
          return;
        }
        
        form.submit();
      });
    });
  </script>
{% endblock %}