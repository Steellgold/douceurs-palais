{% extends 'base.html.twig' %}

{% block body %}
  <div class="flex flex-col items-center justify-center bg-[#FEFDFB] py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md">
      <div class="text-center mb-10">
        <h2 class="text-4xl font-playfair text-gray-900">Mot de passe oublié</h2>
        <p class="mt-2 text-gray-600">Entrez votre email pour réinitialiser votre mot de passe</p>
      </div>
      
      {% if errors is defined and errors is not empty %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
          <span class="block sm:inline">{{ errors }}</span>
        </div>
      {% endif %}
      
      <div class="bg-white shadow-lg rounded-lg p-8 border border-gray-100">
        <form class="space-y-6" method="post">
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
            <div class="mt-1">
              {{ component('Input', {
                id: 'email',
                name: 'email',
                type: 'email',
                placeholder: 'Entrez votre email',
                autocomplete: 'email',
                required: true
              }) }}
            </div>
          </div>

          <div>
            {{ component('Button', {
              label: 'Envoyer un lien de réinitialisation',
              variant: 'primary',
              type: 'submit',
              fullWidth: true,
              href: path('app_check_email_page')
            }) }}
          </div>
        </form>
        
        <div class="mt-6 text-center">
          <p class="text-sm text-gray-600">
            <a href="{{ path('app_login_page') }}" class="font-medium text-[#EDA239] hover:text-[#EFAF7D]">
              Retour à la connexion
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
{% endblock %}