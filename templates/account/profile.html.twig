{% extends 'base.html.twig' %}

{% block title %}Mon profil - Aux Douceurs du Palais{% endblock %}

{% block body %}
  <div class="bg-[#FEFDFB] py-10 px-4 md:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto">
      <div class="flex items-center mb-6">
        <a href="{{ path('app_account') }}" class="mr-4 text-gray-600 hover:text-gray-900">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
        </a>
        <h1 class="text-3xl font-playfair">Modifier mon profil</h1>
      </div>

      {% for label, messages in app.flashes %}
        {% for message in messages %}
          <div class="mb-6 p-4 rounded-md {% if label == 'success' %}bg-green-100 border border-green-400 text-green-700{% else %}bg-red-100 border border-red-400 text-red-700{% endif %}">
            <p>{{ message }}</p>
          </div>
        {% endfor %}
      {% endfor %}

      <div class="bg-white shadow-md rounded-lg p-6 border border-gray-100">
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
          <div>
            <label for="{{ form.firstName.vars.id }}" class="block text-sm font-medium text-gray-700">Prénom</label>
            <div class="mt-1">
              {{ form_widget(form.firstName, {
                'attr': {
                  'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#EDA239] focus:border-[#EDA239]'
                }
              }) }}
              <div class="text-red-500 text-xs mt-1">
                {{ form_errors(form.firstName) }}
              </div>
            </div>
          </div>

          <div>
            <label for="{{ form.lastName.vars.id }}" class="block text-sm font-medium text-gray-700">Nom</label>
            <div class="mt-1">
              {{ form_widget(form.lastName, {
                'attr': {
                  'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#EDA239] focus:border-[#EDA239]'
                }
              }) }}
              <div class="text-red-500 text-xs mt-1">
                {{ form_errors(form.lastName) }}
              </div>
            </div>
          </div>

          <div>
            <label for="{{ form.email.vars.id }}" class="block text-sm font-medium text-gray-700">Email</label>
            <div class="mt-1">
              {{ form_widget(form.email, {
                'attr': {
                  'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#EDA239] focus:border-[#EDA239]'
                }
              }) }}
              <div class="text-red-500 text-xs mt-1">
                {{ form_errors(form.email) }}
              </div>
            </div>
          </div>

          <div>
            <label for="{{ form.phone.vars.id }}" class="block text-sm font-medium text-gray-700">Téléphone</label>
            <div class="mt-1">
              {{ form_widget(form.phone, {
                'attr': {
                  'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#EDA239] focus:border-[#EDA239]'
                }
              }) }}
              <div class="text-red-500 text-xs mt-1">
                {{ form_errors(form.phone) }}
              </div>
            </div>
          </div>

          <div class="pt-4">
            <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-black bg-[#EDA239] hover:bg-[#EFAF7D] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#EDA239]">
              Enregistrer les modifications
            </button>
          </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
{% endblock %}