{% extends 'base.html.twig' %}

{% block title %}{% if edit is defined and edit %}Modifier{% else %}Ajouter{% endif %} une adresse{% endblock %}

{% block body %}
  <div class="bg-[#FEFDFB] py-10 px-4 md:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto">
      <div class="flex items-center mb-6">
        <a href="{{ path('app_account_addresses') }}" class="mr-4 text-gray-600 hover:text-gray-900">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
        </a>
        <h1 class="text-3xl font-playfair">
          {% if edit is defined and edit %}
            Modifier mon adresse
          {% else %}
            Ajouter une adresse
          {% endif %}
        </h1>
      </div>

      <div class="bg-white shadow-md rounded-lg p-6 border border-gray-100">
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
        <div>
          <label for="{{ form.label.vars.id }}" class="block text-sm font-medium text-gray-700">Libellé</label>
          <div class="mt-1">
            {{ form_widget(form.label, {
              'attr': {
                'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#EDA239] focus:border-[#EDA239]',
                'placeholder': 'Ex: Domicile, Bureau, etc.'
              }
            }) }}
            <div class="text-red-500 text-xs mt-1">
              {{ form_errors(form.label) }}
            </div>
          </div>
        </div>

        <div>
          <label for="{{ form.street.vars.id }}" class="block text-sm font-medium text-gray-700">Adresse</label>
          <div class="mt-1">
            {{ form_widget(form.street, {
              'attr': {
                'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#EDA239] focus:border-[#EDA239]',
                'placeholder': 'Numéro et nom de rue'
              }
            }) }}
            <div class="text-red-500 text-xs mt-1">
              {{ form_errors(form.street) }}
            </div>
          </div>
        </div>

        <div>
          <label for="{{ form.complement.vars.id }}" class="block text-sm font-medium text-gray-700">Complément d'adresse</label>
          <div class="mt-1">
            {{ form_widget(form.complement, {
              'attr': {
                'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#EDA239] focus:border-[#EDA239]',
                'placeholder': 'Appartement, étage, etc.'
              }
            }) }}
            <div class="text-red-500 text-xs mt-1">
              {{ form_errors(form.complement) }}
            </div>
          </div>
        </div>

        <div>
          <label for="{{ form.postalCode.vars.id }}" class="block text-sm font-medium text-gray-700">Code postal</label>
          <div class="mt-1">
            {{ form_widget(form.postalCode, {
              'attr': {
                'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#EDA239] focus:border-[#EDA239]',
                'placeholder': 'Code postal'
              }
            }) }}
            <div class="text-red-500 text-xs mt-1">
              {{ form_errors(form.postalCode) }}
            </div>
          </div>
        </div>

        <div>
          <label for="{{ form.city.vars.id }}" class="block text-sm font-medium text-gray-700">Ville</label>
          <div class="mt-1">
            {{ form_widget(form.city, {
              'attr': {
                'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#EDA239] focus:border-[#EDA239]',
                'placeholder': 'Ville'
              }
            }) }}
            <div class="text-red-500 text-xs mt-1">
              {{ form_errors(form.city) }}
            </div>
          </div>
        </div>

        <div class="flex items-center">
          {{ form_widget(form.isPrimary, {
            'attr': {
              'class': 'h-4 w-4 text-[#EDA239] focus:ring-[#EDA239] border-gray-300 rounded'
            }
          }) }}
          <label for="{{ form.isPrimary.vars.id }}" class="ml-2 block text-sm text-gray-700">
            Définir comme adresse principale
          </label>
        </div>

        <div class="pt-4">
          <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-black bg-[#EDA239] hover:bg-[#EFAF7D] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#EDA239]">
            {% if edit is defined and edit %}
              Mettre à jour l'adresse
            {% else %}
              Ajouter l'adresse
            {% endif %}
          </button>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
{% endblock %}