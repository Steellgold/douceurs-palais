<div class="bg-[#FEFDFB] rounded-lg p-4 w-[25rem] flex flex-col shadow-lg">
  <div class="flex flex-col flex-grow">
    <div class="flex flex-row items-center mt-2">
      {% for i in 1..5 %}
        {% if i <= rating %}
          <i data-lucide="star" class="text-yellow-500 fill-yellow-500 size-5"></i>
        {% elseif i == rating + 0.5 %}
          <i data-lucide="star-half" class="text-yellow-500 fill-yellow-500 size-5"></i>
        {% endif %}
      {% endfor %}
    </div>

    <p class="text-gray-600 italic mt-2 text-sm flex-grow">"{{ review }}"</p>
    <p class="text-gray-800 text-xl mt-2 font-playfair">{{ name }}</p>
  </div>
</div>
