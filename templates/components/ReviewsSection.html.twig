<script>
  document.addEventListener('DOMContentLoaded', function() {
    const scrollContainer = document.getElementById('reviews-scroll-container');
    const contentContainer = document.getElementById('reviews-content');
        
    const cloneElements = () => {
      const contentWidth = contentContainer.offsetWidth;
      const containerWidth = scrollContainer.offsetWidth;
            
      if (contentWidth < containerWidth * 2) {
        const reviewCards = contentContainer.children;

        for (let i = 0; i < reviewCards.length; i++) {
          const clone = reviewCards[i].cloneNode(true);
          contentContainer.appendChild(clone);
        }
                
        cloneElements();
      }
    }

    cloneElements();
        
    const animateScroll = () => {
      if (scrollContainer.scrollLeft >= scrollContainer.scrollWidth / 2) {
        scrollContainer.scrollLeft = 0;
      } else {
        scrollContainer.scrollLeft += 1;
      }
            
      requestAnimationFrame(animateScroll);
    }
        
    requestAnimationFrame(animateScroll);
  });
</script>