{% extends 'base.html.twig' %}

{% block title %}Nos catégories - Aux Douceurs du Palais{% endblock %}

{% block body %}
  <div class="bg-[#FEFDFB] py-12">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-playfair mb-4">Nos catégories</h1>
        <p class="text-gray-600 max-w-2xl mx-auto">Découvrez notre sélection de produits frais et artisanaux par catégorie, préparés par nos artisans boulangers avec passion et savoir-faire.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for item in categories %}
          {% set category = item[0] %}
          {% set productCount = item.productCount %}

          <twig:CategoryCard
              name="{{ category.name }}"
              description="{{ category.description }}"
              imageUrl="{{ category.image ? category.image : null }}"
              slug="{{ category.slug }}"
              productCount="{{ productCount }}"
              href="{{ path('app_category_show', {'slug': category.slug}) }}"
              variant="default"
          />
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}