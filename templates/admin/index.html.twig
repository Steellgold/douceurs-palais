{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
  <div class="bg-[#FEFDFB] py-10 px-4 md:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-3xl font-playfair mb-8">Administration</h1>

      {% for label, messages in app.flashes %}
        {% for message in messages %}
          <div class="mb-6 p-4 rounded-md {% if label == 'success' %}bg-green-100 border border-green-400 text-green-700{% else %}bg-red-100 border border-red-400 text-red-700{% endif %}">
            <p>{{ message }}</p>
          </div>
        {% endfor %}
      {% endfor %}

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <a href="{{ path('app_admin_bakeries') }}" class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
          <h2 class="text-xl font-playfair mb-2">Boulangeries</h2>
          <p class="text-gray-600">Gérer les boulangeries</p>
        </a>

        <a href="{{ path('app_admin_users') }}" class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
          <h2 class="text-xl font-playfair mb-2">Utilisateurs</h2>
          <p class="text-gray-600">Gérer les utilisateurs et définir les boulangers</p>
        </a>
      </div>
    </div>
  </div>
{% endblock %}