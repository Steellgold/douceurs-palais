{% extends 'base.html.twig' %}

{% block title %}{% if edit is defined and edit %}Modifier{% else %}Ajouter{% endif %} une boulangerie{% endblock %}

{% block body %}
  <div class="bg-[#FEFDFB] py-10 px-4 md:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto">
      <div class="flex items-center mb-6">
        <a href="{{ path('app_admin_bakeries') }}" class="mr-4 text-gray-600 hover:text-gray-900">
          <i data-lucide="chevron-left" class="h-5 w-5"></i>
        </a>
        <h1 class="text-3xl font-playfair">
          {% if edit is defined and edit %}
            Modifier la boulangerie
          {% else %}
            Ajouter une boulangerie
          {% endif %}
        </h1>
      </div>

      <div class="bg-white shadow-md rounded-lg p-6 border border-gray-100">
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

        <div>
          <label for="{{ form.name.vars.id }}" class="block text-sm font-medium text-gray-700">Nom</label>
          <div class="mt-1">
            {{ form_widget(form.name, {
              'attr': {
                'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#EDA239] focus:border-[#EDA239]'
              }
            }) }}
            <div class="text-red-500 text-xs mt-1">
              {{ form_errors(form.name) }}
            </div>
          </div>
        </div>

        <div>
          <label for="{{ form.description.vars.id }}" class="block text-sm font-medium text-gray-700">Description</label>
          <div class="mt-1">
            {{ form_widget(form.description, {
              'attr': {
                'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#EDA239] focus:border-[#EDA239]'
              }
            }) }}
            <div class="text-red-500 text-xs mt-1">
              {{ form_errors(form.description) }}
            </div>
          </div>
        </div>

        <div>
          <label for="{{ form.story.vars.id }}" class="block text-sm font-medium text-gray-700">Histoire</label>
          <div class="mt-1">
            {{ form_widget(form.story, {
              'attr': {
                'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#EDA239] focus:border-[#EDA239]'
              }
            }) }}
            <div class="text-red-500 text-xs mt-1">
              {{ form_errors(form.story) }}
            </div>
          </div>
        </div>

        <div>
          <label for="{{ form.address.vars.id }}" class="block text-sm font-medium text-gray-700">Adresse</label>
          <div class="mt-1">
            {{ form_widget(form.address, {
              'attr': {
                'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#EDA239] focus:border-[#EDA239]'
              }
            }) }}
            <div class="text-red-500 text-xs mt-1">
              {{ form_errors(form.address) }}
            </div>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="{{ form.city.vars.id }}" class="block text-sm font-medium text-gray-700">Ville</label>
            <div class="mt-1">
              {{ form_widget(form.city, {
                'attr': {
                  'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#EDA239] focus:border-[#EDA239]'
                }
              }) }}
              <div class="text-red-500 text-xs mt-1">
                {{ form_errors(form.city) }}
              </div>
            </div>
          </div>

          <div>
            <label for="{{ form.postalCode.vars.id }}" class="block text-sm font-medium text-gray-700">Code postal</label>
            <div class="mt-1">
              {{ form_widget(form.postalCode, {
                'attr': {
                  'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#EDA239] focus:border-[#EDA239]'
                }
              }) }}
              <div class="text-red-500 text-xs mt-1">
                {{ form_errors(form.postalCode) }}
              </div>
            </div>
          </div>
        </div>

        <div>
          <label for="{{ form.phone.vars.id }}" class="block text-sm font-medium text-gray-700">Téléphone</label>
          <div class="mt-1">
            {{ form_widget(form.phone, {
              'attr': {
                'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#EDA239] focus:border-[#EDA239]'
              }
            }) }}
            <div class="text-red-500 text-xs mt-1">
              {{ form_errors(form.phone) }}
            </div>
          </div>
        </div>

        <div>
          <label for="{{ form.email.vars.id }}" class="block text-sm font-medium text-gray-700">Email</label>
          <div class="mt-1">
            {{ form_widget(form.email, {
              'attr': {
                'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#EDA239] focus:border-[#EDA239]'
              }
            }) }}
            <div class="text-red-500 text-xs mt-1">
              {{ form_errors(form.email) }}
            </div>
          </div>
        </div>

        <div>
          <label for="{{ form.website.vars.id }}" class="block text-sm font-medium text-gray-700">Site web</label>
          <div class="mt-1">
            {{ form_widget(form.website, {
              'attr': {
                'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-[#EDA239] focus:border-[#EDA239]'
              }
            }) }}
            <div class="text-red-500 text-xs mt-1">
              {{ form_errors(form.website) }}
            </div>
          </div>
        </div>

        <div class="pt-4">
          <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-black bg-[#EDA239] hover:bg-[#EFAF7D] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#EDA239]">
            {% if edit is defined and edit %}
              Mettre à jour la boulangerie
            {% else %}
              Ajouter la boulangerie
            {% endif %}
          </button>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
{% endblock %}