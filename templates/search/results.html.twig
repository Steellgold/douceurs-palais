{% extends 'base.html.twig' %}

{% block title %}Résultats de recherche{% endblock %}

{% block body %}
  <div class="bg-[#FEFDFB] py-12 min-h-screen">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-playfair mb-4">Résultats de recherche</h1>
        {% if location %}
          <p class="text-gray-600">Recherche pour : <span class="font-semibold">{{ location }}</span></p>
        {% elseif city and postalCode %}
          <p class="text-gray-600">Recherche pour : <span class="font-semibold">{{ city }} ({{ postalCode }})</span></p>
        {% elseif city %}
          <p class="text-gray-600">Recherche pour : <span class="font-semibold">{{ city }}</span></p>
        {% elseif postalCode %}
          <p class="text-gray-600">Recherche pour : <span class="font-semibold">{{ postalCode }}</span></p>
        {% endif %}
      </div>

      {% if not searchPerformed %}
        <div class="text-center py-12">
          <i data-lucide="search" class="h-16 w-16 text-gray-300 mx-auto mb-4"></i>
          <p class="text-gray-500 mb-6">Veuillez entrer une ville ou un code postal pour rechercher des boulangeries</p>
          <twig:SearchInput class="mx-auto" />
        </div>
      {% elseif bakeries|length > 0 %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {% for bakery in bakeries %}
            <div class="bg-white rounded-lg shadow-md overflow-hidden transition-all hover:shadow-lg">
              <a href="{{ path('app_bakery_show', {'slug': bakery.slug}) }}" class="block">
                <div class="h-40 bg-gray-200 relative">
                  {% if bakery.mainImage %}
                    <img src="{{ bakery.mainImage }}" alt="{{ bakery.name }}" class="w-full h-full object-cover" />
                  {% else %}
                    <div class="w-full h-full flex items-center justify-center bg-gray-200">
                      <i data-lucide="cake" class="h-12 w-12 text-gray-400"></i>
                    </div>
                  {% endif %}
                  <div class="absolute top-0 right-0 m-2">
                    <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-white shadow-sm">
                      <i data-lucide="star" class="h-4 w-4 text-yellow-400 mr-1"></i>
                      {{ bakery.rating|number_format(1) }}
                    </span>
                  </div>

                  {% if app.user %}
                    <div class="absolute top-2 left-2">
                      <form method="post" action="{{ path('app_bakery_toggle_favorite', {'id': bakery.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('favorite-bakery' ~ bakery.id) }}">
                        <button type="submit" class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-white shadow-sm">
                          {% if app.user.hasFavoriteBakery(bakery) %}
                            <i data-lucide="heart" class="h-5 w-5 text-red-500 fill-red-500"></i>
                          {% else %}
                            <i data-lucide="heart" class="h-5 w-5 text-gray-400 hover:text-red-500"></i>
                          {% endif %}
                        </button>
                      </form>
                    </div>
                  {% endif %}
                </div>
                <div class="p-4">
                  <h3 class="text-xl font-playfair mb-2">{{ bakery.name }}</h3>
                  <p class="text-gray-600 text-sm line-clamp-2 mb-3">{{ bakery.description|striptags|slice(0, 100) ~ (bakery.description|length > 100 ? '...' : '') }}</p>
                  <div class="flex items-center text-sm text-gray-500">
                    <i data-lucide="map-pin" class="h-4 w-4 mr-1"></i>
                    <span>
                     {% if bakery.city %}
                       {{ bakery.city }}{% if bakery.postalCode %} ({{ bakery.postalCode }}){% endif %}
                     {% else %}
                       {{ bakery.address|slice(0, 30) ~ (bakery.address|length > 30 ? '...' : '') }}
                     {% endif %}
                    </span>
                  </div>
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <div class="text-center py-12 bg-white rounded-lg shadow-md">
          <i data-lucide="map-pin-off" class="h-16 w-16 text-gray-300 mx-auto mb-4"></i>
          <p class="text-gray-500 mb-4">Aucune boulangerie trouvée dans cette zone</p>
          <p class="text-sm text-gray-400 mb-6">Essayez une recherche dans une ville voisine</p>

          <div class="max-w-md mx-auto">
            <twig:SearchInput />
          </div>

          <div class="mt-8">
            <a href="{{ path('app_bakery_list') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-black bg-[#EDA239] hover:bg-[#EFAF7D]">
              Voir toutes nos boutiques
            </a>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
{% endblock %}